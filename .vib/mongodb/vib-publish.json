{
  "phases": {
    "package": {
      "context": {
        "resources": {
          "url": "{SHA_ARCHIVE}",
          "path": "/bitnami/mongodb"
        }
      },
      "actions": [
        {
          "action_id": "helm-package"
        },
        {
          "action_id": "helm-lint"
        }
      ]
    },
    "verify": {
      "context": {
        "resources": {
          "url": "{SHA_ARCHIVE}",
          "path": "/bitnami/mongodb"
        },
        "runtime_parameters": "YXV0aDoKICByb290UGFzc3dvcmQ6IDdkTXhMZmNxeE4KICByb290VXNlcjogcm9vdAogIHVzZXJuYW1lczoKICAgIC0ga2F5bGUKICBkYXRhYmFzZXM6CiAgICAtIGF3ZXNvbWVfZGIKc2VydmljZToKICBwb3J0czoKICAgIG1vbmdvZGI6IDgwCiAgdHlwZTogTG9hZEJhbGFuY2VyCg==",
        "target_platform": {
          "target_platform_id": "{VIB_ENV_TARGET_PLATFORM}",
          "size": {
            "name": "S4"
          }
        }
      },
      "actions": [
        {
          "action_id": "trivy",
          "params": {
            "threshold": "CRITICAL",
            "vuln_type": [
              "OS"
            ]
          }
        },
        {
          "action_id": "health-check",
          "params": {
            "endpoint": "lb-mongodb-mongodb"
          }
        },
        {
          "action_id": "goss",
          "params": {
            "resources": {
              "path": "/.vib/mongodb/goss"
            },
            "remote": {
              "workload": "deploy-mongodb"
            }
          }
        }
      ]
    },
    "publish": {
      "actions": [
        {
          "action_id": "helm-publish",
          "params": {
            "repository": {
              "kind": "S3",
              "url": "{VIB_ENV_S3_URL}",
              "username": "{VIB_ENV_S3_USERNAME}",
              "password": "{VIB_ENV_S3_PASSWORD}"
            }
          }
        }
      ]
    }
  }
}
